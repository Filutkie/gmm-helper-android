<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:umano="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    app:umanoPanelHeight="@dimen/sliding_panel_height"
    app:umanoDragView="@+id/dragView"
    app:umanoOverlay="true"
    app:umanoInitialState="hidden"
    app:umanoShadowHeight="4dp">

    <!-- Main screen content -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/map_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"/>

        <ImageButton
            android:id="@+id/angry_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/button_map_tool"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="false"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:drawableStart="@drawable/ic_map_marker_grey600_24dp"
            android:src="@drawable/ic_map_marker_grey600_24dp"
            android:layout_alignParentEnd="true"
            android:elevation="1dp"
            android:cropToPadding="false"
            android:focusable="true" />

    </RelativeLayout>

    <!-- Sliding panel -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeeeee"
        android:orientation="vertical"
        android:clickable="false"
        android:focusable="false"
        android:id="@+id/dragView">

        <include
            android:id="@+id/include_panel_content"
            layout="@layout/sliding_panel_content" />

    </LinearLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>
